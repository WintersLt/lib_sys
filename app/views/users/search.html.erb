<% provide(:title, @current_user.name) %>
<%= render 'users/users_common' %>
<p>

	<%= render 'users/book_search_box' %>
</p>
Displaying search results for "<%= @query %>"
<ul>
<% @books.each do |book| %>
  <li><%= link_to book.book_name, "/books/#{book.id}" %> 
	<% if logged_in_as_admin? %>
		<%= link_to 'Delete' , book_path(book), method: :delete, data: {confirm: 'Are you sure?'} %></li>
	<% end %>
  </br>
<% end %>
