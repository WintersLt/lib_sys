<% provide(:title, @current_user.name) %>
<% if logged_in_as_admin? %>
	<h1>Admin Home</h1>
	<%= render 'users/admin_home' %>
<% else %>
	<h1>Member Home</h1>
	<%= render 'users/lib_member_home' %>
<% end %>
<p>
<!-- only non admin can see book search page as yet -->
<% if !logged_in_as_admin? %>
	<%= render 'users/book_search_box' %>
<% end %>
</p>
Displaying search results for "<%= @query %>"
<ul>
<% @books.each do |book| %>
  <li><%= link_to book.book_name, '/books/#{book.id}' %></li>
  </br>
<% end %>
